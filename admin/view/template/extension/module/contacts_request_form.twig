{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-order-status" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ _e("Full name") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.full_name}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("Email") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.email}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("Topic") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.topic_name}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("Device") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.device}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("Phone") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.phone}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("eSIM ICCID") }}</label>
            <div class="col-sm-10">
              <input type="text" name="" id="" readonly class="form-control" value="{{request.esim_iccid}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ _e("Message") }}</label>
            <div class="col-sm-10">
              <textarea name="" id="" rows="10" readonly class="form-control">{{request.message}}</textarea>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
