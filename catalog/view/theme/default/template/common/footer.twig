<footer class="footer">
    <div class="container">
        <div class="footer__content d-flex flex-column flex-lg-row justify-content-between gap-20">
            <div class="col-xl-4">
                <div class="d-flex flex-column">
                    <a href="{{home}}" class="logo footer__logo">
                        <img src="{{logo}}" alt="logo" class="logo__default">
                        {# <img src="images/logo_business.svg" alt="logo" class="logo__business"> #}
                    </a>
                    <div class="footer__text mt-4">{{ _e("Need help?") }} <br> Call us: {{telephone}}</div>
                    {{social_links}}
                </div>
            </div>
            <div class="col-xl-8 d-flex flex-column flex-lg-row justify-content-between">
                <div class="footer__column">
                    <div class="footer__title">{{ _e("Popular countries") }}</div>
                    <ul class="footer__menu footer__menu-column-2">
                        {% for manufacturer in manufacturers %}
                        <li class="footer__menu-item"><a href="{{manufacturer.href}}" class="manual-text">{{manufacturer.name}}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% for article_block in articles_block %}
                <div class="footer__column">
                    <div class="footer__title">{{article_block.title}}</div>
                    <ul class="footer__menu">
                        {% for article in article_block.articles %}
                        <li class="footer__menu-item"><a href="{{article.href}}" class="manual-text">{{article.name}}</a></li>
                            
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %} 
                {% for links_block in custom_links_block %}
                <div class="footer__column">
                    <div class="col-12 footer__title">{{links_block.name}}</div>
                    <ul class="footer__menu">
                        {% for link in links_block.links %}
                        <li class="footer__menu-item"><a href="{{link.link}}" class="manual-text">{{link.title}}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="footer__bottom d-flex flex-column-reverse flex-lg-row justify-content-between">
            <div class="col-12 col-sm-8 col-md-7 col-lg-3 d-flex align-items-center justify-content-between mt-3 mt-lg-0 mx-auto mx-lg-0 gap-10 gap-max-md-0">
                {% for icon in small_icons %}
                <a>
                    <img src="{{icon}}" alt="apple pay">
                </a>
                {% endfor %}
            </div>
            <div class="col-12 col-lg-4 manual-text">
                © {{year}} {{ _e("Novamobile. All rights reserved") }}
            </div>
        </div>
    </div>
</footer>
