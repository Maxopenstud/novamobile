{% set html_tags_replace = {
  '<ul>': '<ul class="manual-list">',
  '<h1>': '<div class="manual-title">',
  '</h1>': '</div>',
  '<h2>': '<div class="manual-title">',
  '</h2>': '</div>',
  '<h3>': '<div class="manual-title">',
  '</h3>': '</div>',
  '<h4>': '<div class="manual-title">',
  '</h4>': '</div>',
  '<p>': '<div class="manual-text mt-20">',
  '</p>': '</div>'
} %}

{{header}}
{{menu}}
<div class="container">
    <ul class="breadcrumbs">
        <li class="breadcrumbs__item">
            <a href="#" class="breadcrumbs__link">Home</a>
        </li>
        <li class="breadcrumbs__item">
            <a href="#" class="breadcrumbs__link active">Current page</a>
        </li>
    </ul>
</div>
{{content_top}}
<div class="section pt-0">
  <div class="container">
      <div class="d-flex flex-column-reverse flex-md-row-reverse gap-40 gap-max-xl-30">
          {% if articles or column_right %}
          <div class="">
              <div id="column-left">
                  {{column_right}}
                  {% if articles %}
                  <div class="related-articles">
                      <div class="related-articles-title">
                          {{ _e("Related Articles") }}
                      </div>
                      <ul class="related-articles-list">
                          {% for article in articles %}
                          <li class="related-articles-item">
                              <a href="{{article.href}}" class="d-flex align-items-center justify-content-between">
                                  {{article.name}}
                                  <svg width="14" height="13" viewBox="0 0 14 13" fill="none"
                                      xmlns="http://www.w3.org/2000/svg">
                                      <path
                                          d="M1.16973 11.4439C1.01386 11.2213 0.956785 10.9917 0.998493 10.7552C1.0402 10.5186 1.17235 10.3224 1.39495 10.1666L10.4936 3.79566L4.75822 2.71119C4.41873 2.70011 4.18356 2.51231 4.05273 2.14779C3.92189 1.78327 3.96637 1.46186 4.18616 1.18356C4.40596 0.905253 4.70509 0.799468 5.08355 0.866202L13.0312 2.26759C13.315 2.31764 13.5349 2.45396 13.6908 2.67656C13.8466 2.89915 13.8995 3.15237 13.8495 3.43622L12.4481 11.3839C12.398 11.6677 12.2617 11.8876 12.0391 12.0434C11.8165 12.1993 11.5772 12.2425 11.3212 12.1729C11.0652 12.1034 10.8592 11.9573 10.7034 11.7347C10.5475 11.5121 10.5141 11.2867 10.6031 11.0585L11.5456 5.29818L2.44703 11.6691C2.22443 11.825 1.99486 11.882 1.75833 11.8403C1.52179 11.7986 1.32559 11.6665 1.16973 11.4439Z"
                                          fill="url(#paint0_linear_600_6603)" />
                                      <defs>
                                          <linearGradient id="paint0_linear_600_6603" x1="11.7247" y1="17.1352"
                                              x2="4.87824" y2="1.47072" gradientUnits="userSpaceOnUse">
                                              <stop stop-color="#832FBD" />
                                              <stop offset="1" stop-color="#D06852" />
                                          </linearGradient>
                                      </defs>
                                  </svg>
                              </a>
                          </li>
                          {% endfor %}
                      </ul>
                  </div>
                  {% endif %}
              </div>
          </div>
          {% endif %}
          <div class="w-100">
              <div class="article">
                  <img src="{{image}}" alt="">
                  <div class="blog__date">
                      <svg width="18" height="18" viewBox="0 0 18 18" fill="none"
                          xmlns="http://www.w3.org/2000/svg">
                          <g clip-path="url(#clip0_1481_5300)">
                              <path
                                  d="M12.2067 10.5894L9.69703 8.70714V4.87293C9.69703 4.48741 9.38541 4.17578 8.99988 4.17578C8.61436 4.17578 8.30273 4.48741 8.30273 4.87293V9.05575C8.30273 9.27534 8.40592 9.48241 8.58159 9.61347L11.3701 11.7049C11.4956 11.799 11.642 11.8443 11.7877 11.8443C12.0003 11.8443 12.2095 11.7488 12.3461 11.5647C12.5776 11.2573 12.5149 10.8202 12.2067 10.5894Z"
                                  fill="#A9A9A9" />
                              <path
                                  d="M9 0C4.0371 0 0 4.0371 0 9C0 13.9629 4.0371 18 9 18C13.9629 18 18 13.9629 18 9C18 4.0371 13.9629 0 9 0ZM9 16.6057C4.80674 16.6057 1.39426 13.1933 1.39426 9C1.39426 4.80674 4.80674 1.39426 9 1.39426C13.194 1.39426 16.6057 4.80674 16.6057 9C16.6057 13.1933 13.1933 16.6057 9 16.6057Z"
                                  fill="#A9A9A9" />
                          </g>
                          <defs>
                              <clipPath id="clip0_1481_5300">
                                  <rect width="18" height="18" fill="white" />
                              </clipPath>
                          </defs>
                      </svg>
                      {{date}}
                  </div>
                  <div class="article__title">{{heading_title}}</div>
                  {{description|replace(html_tags_replace)}}
              </div>
          </div>
      </div>
  </div>
</div>
{{content_bottom}}
{{footer}}